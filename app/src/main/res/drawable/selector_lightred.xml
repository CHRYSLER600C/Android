<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0dp" android:color="#ff0000"/>

            <gradient
                android:endColor="#ac3b1f"
                android:startColor="#b9382a"/>

            <corners android:radius="40dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0dp" android:color="#f89c39"/>

            <gradient
                android:endColor="#dc3b1f"
                android:startColor="#f9382a"/>

            <corners android:radius="40dp"/>
        </shape>
    </item>

</selector>