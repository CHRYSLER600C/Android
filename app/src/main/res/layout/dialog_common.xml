<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_bg_gray_white_6raduis"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvCommonDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="20dp"
        android:paddingRight="25dp"
        android:textColor="@color/color_3"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etCommonDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_rect_ed_4corner"
        android:hint="请输入"
        android:paddingStart="15sp"
        android:paddingTop="10dip"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        android:textColor="@color/color_3"
        android:textColorHint="@color/color_9"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvCommonDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.1"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:paddingRight="25dp"
        android:textColor="@color/color_3"
        android:textSize="16sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tvCommonDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white_gray_0corners"
            android:padding="15dip"
            android:textColor="@color/common_btn_lightblue"
            android:textSize="15sp"
            tools:text="取消"/>

        <TextView
            android:id="@+id/tvCommonDialogOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white_gray_0corners"
            android:padding="15dip"
            android:textColor="@color/common_btn_lightblue"
            android:textSize="15sp"
            tools:text="确定"/>
    </LinearLayout>
</LinearLayout>