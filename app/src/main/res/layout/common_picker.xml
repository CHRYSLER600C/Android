<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:su="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="horizontal">

    <com.born.frame.view.pickerview.PickerScroller
        android:id="@+id/pickerScroller1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        su:itemNumber="3"
        su:lineColor="@color/picker_text_color"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="14sp"
        su:selecredTextColor="@color/picker_text_color"
        su:selecredTextSize="16sp"
        su:unitHight="50dp"/>

    <com.born.frame.view.pickerview.PickerScroller
        android:id="@+id/pickerScroller2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        su:itemNumber="3"
        su:lineColor="@color/picker_text_color"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="14sp"
        su:selecredTextColor="@color/picker_text_color"
        su:selecredTextSize="16sp"
        su:unitHight="50dp"/>

    <com.born.frame.view.pickerview.PickerScroller
        android:id="@+id/pickerScroller3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        su:itemNumber="3"
        su:lineColor="@color/picker_text_color"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="14sp"
        su:selecredTextColor="@color/picker_text_color"
        su:selecredTextSize="16sp"
        su:unitHight="50dp"/>

</LinearLayout>